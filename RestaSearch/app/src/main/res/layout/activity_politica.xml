                    android:text="@string/privacy_title7_line4" />

                <TextView
                    android:id="@+id/title8"
                    style="@style/PrivacyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_title8" />

                <TextView
                    android:id="@+id/textView34"
                    style="@style/PrivacyLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_title8_line1" />

                <TextView
                    android:id="@+id/textView35"
                    style="@style/PrivacyLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_title8_line2" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/navigation_view"
        layout="@layout/navigation_layout"/>

</androidx.drawerlayout.widget.DrawerLayout>