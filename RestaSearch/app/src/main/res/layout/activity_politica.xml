                    android:text="@string/privacy_title6" />

                <TextView
                    android:id="@+id/textView27"
                    style="@style/PrivacyLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_title6_line1" />

                <TextView
                    android:id="@+id/title7"
                    style="@style/PrivacyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_title7" />

                <TextView
                    android:id="@+id/textView29"
                    style="@style/PrivacyLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_title7_line1" />

                <TextView
                    android:id="@+id/textView30"
                    style="@style/PrivacyListLine"
                    android:layout_width="match_parent"
