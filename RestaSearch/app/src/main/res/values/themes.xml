<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.RestaSearch" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color.
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color.
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/terciary_color</item>
        <item name="colorPrimaryDark">@color/terciary_color</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/terciary_color</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="drawerArrowStyle">@style/Theme.DrawerArrowStyle</item>
    </style>

    <style name="Theme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="EstilBotoPrincipal" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Rounded</item>
        <item name="android:backgroundTint">@color/secondary_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Theme.RestaSearch.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="PrivacyMainTitle">
        <item name="fontFamily">@font/poppins_italic</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrivacyTitle">
        <item name="fontFamily">@font/poppins_italic</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="PrivacyLine">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="PrivacyListLine">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
</resources>